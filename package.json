{
  "name": "universe-vue-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "test": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "vite build --config vite.config.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:vue2": "cd vue2-build && pnpm install && pnpm vite build",
    "build:vue3": "vue-demi-switch 3 && vite build --config build/vite.config.vue3.ts",
    "build:all": "pnpm run build:vue2 && pnpm run build:vue3",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "pnpm changelog && pnpm version patch && pnpm publish",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types --project tsconfig.json",
    "gen:api": "node scripts/gen-api-docs.js",
    "build:webc": "cross-env BUILD_WEB_COMPONENT=1 vite build --mode lib",
    "gen:readme-locale": "node scripts/gen-readme-locale.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.14",
    "@storybook/addon-docs": "^9.0.14",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-interactions": "9.0.0-alpha.10",
    "@storybook/addon-vitest": "^9.0.14",
    "@storybook/manager-api": "9.0.0-alpha.1",
    "@storybook/theming": "9.0.0-alpha.1",
    "@storybook/vue3": "^9.0.14",
    "@storybook/vue3-vite": "^9.0.14",
    "@types/node": "^24.0.7",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue2": "^2.3.3",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/ui": "3.2.4",
    "@vue/composition-api": "^1.7.2",
    "@vue/test-utils": "^2.4.6",
    "@vue/web-component-wrapper": "^1.3.0",
    "changelogen": "^0.6.1",
    "conventional-changelog": "^7.1.0",
    "conventional-changelog-angular": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.0",
    "eslint-plugin-storybook": "^9.0.14",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.1",
    "prettier": "^3.6.2",
    "rollup-plugin-vue": "^6.0.0",
    "storybook": "^9.0.14",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-demi": "^0.14.10",
    "vue-docgen-api": "^4.79.2",
    "vue-template-compiler": "^2.7.0"
  }
}
