#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules/chromatic/dist/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules/chromatic/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules/chromatic/dist/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules/chromatic/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/chromatic@12.2.0/node_modules:/Users/angck/open-source/universe-vue-template/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../../chromatic@12.2.0/node_modules/chromatic/dist/bin.js" "$@"
else
  exec node  "$basedir/../../../../../../chromatic@12.2.0/node_modules/chromatic/dist/bin.js" "$@"
fi
